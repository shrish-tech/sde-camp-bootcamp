// Sum of N natural numbers(1 to N)

import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception{
	    Scanner scn = new Scanner(System.in);
	    
	    int n = scn.nextInt();
	    int sum = 0;
	    for(int i = 1; i <= n ; i++){
	        sum += i;
	    }
	    System.out.println(sum);
	}
}

//Input:
10

//Output:
55
